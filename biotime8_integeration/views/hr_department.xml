<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="biotime_department_form_inherit" model="ir.ui.view">
            <field name="name">biotime.employee.form</field>
            <field name="model">hr.department</field>
            <field name="inherit_id" ref="hr.view_department_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="before">
                    <header>

                    <button name="create_in_biotime" type="object"
                             icon="fa-calendar" string="Sync with Biotime"/>
                                        </header>

                </xpath>
                <field name='name' position="after">
                        <field name="biotime_department_id"/>
                </field>


            </field>
        </record>
    </data>
</odoo>