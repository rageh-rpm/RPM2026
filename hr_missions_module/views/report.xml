<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

<record id="action_report_hr_mission" model="ir.actions.report">
    <field name="name">Mission Report</field>
    <field name="model">hr.mission</field>
    <field name="binding_model_id" ref="model_hr_mission" />
    <field name="report_type">qweb-pdf</field>
    <field name="report_name">hr_missions_module.report_hr_mission_document</field>
    <field name="report_file">hr_missions_module.report_hr_mission_document</field>
    <field name="print_report_name">'Mission - %s' % (object.name)</field>
</record>

<template id="report_hr_mission_document">
    <t t-call="web.html_container">
        <t t-call="web.external_layout">
            <t t-set="company" t-value="docs.company_id if len(docs) == 1 else docs.env.company"/>
            <div class="page">
                <t t-foreach="docs" t-as="doc">

                    <!-- Header -->
                    <div class="text-center mb-4">
                        <h2 class="text-primary mb-1">BUSINESS MISSION AUTHORIZATION</h2>
                        <p class="text-muted">Mission Reference: <strong><span t-field="doc.name"/></strong></p>
                    </div>

                    <!-- Mission Details -->
                    <div class="mb-4">
                        <h3 class="text-primary border-bottom pb-2 mb-3">Mission Details</h3>
                        <div class="row">
                            <div class="col-6">
                                <p class="mb-2"><strong>Employee:</strong> <span t-field="doc.employee_id"/></p>
                                <p class="mb-2"><strong>Department:</strong> <span t-field="doc.department_id"/></p>
                                <p class="mb-2"><strong>Manager:</strong> <span t-field="doc.manager_id"/></p>
                                <p class="mb-2"><strong>Status:</strong> <span t-field="doc.state"/></p>
                            </div>
                            <div class="col-6">
                                <p class="mb-2"><strong>Mission Type:</strong> <span t-field="doc.type_id"/></p>
                                <p class="mb-2"><strong>Scope:</strong> <span t-field="doc.scope"/></p>
                                <p class="mb-2"><strong>Start Date:</strong> <span t-field="doc.start_datetime"/></p>
                                <p class="mb-2"><strong>End Date:</strong> <span t-field="doc.end_datetime"/></p>
                            </div>
                        </div>
                    </div>

                    <!-- Location & Logistics -->
                    <div class="mb-4">
                        <h3 class="text-primary border-bottom pb-2 mb-3">Location and Logistics</h3>
                        <div class="row">
                            <div class="col-6">
                                <p class="mb-2" t-if="doc.state_id"><strong>Destination:</strong> <span t-field="doc.state_id"/></p>
                                <p class="mb-2" t-if="doc.distance_km > 0"><strong>Distance:</strong> <span t-field="doc.distance_km"/> km</p>
                            </div>
                            <div class="col-6">
                                <p class="mb-2"><strong>Accommodation:</strong>
                                    <span t-if="doc.accommodation" class="text-success">Yes</span>
                                    <span t-else="" class="text-muted">No</span>
                                </p>
                                <p class="mb-2"><strong>Transportation:</strong>
                                    <span t-if="doc.transportation" class="text-success">Yes</span>
                                    <span t-else="" class="text-muted">No</span>
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Mission Purpose -->
                    <div class="mb-4" t-if="doc.mission_purpose">
                        <h3 class="text-primary border-bottom pb-2 mb-3">Mission Purpose</h3>
                        <p class="mb-0"><span t-field="doc.mission_purpose"/></p>
                    </div>

                    <!-- Allowances -->
                    <div class="mb-4" t-if="doc.allowance_line_ids">
                        <h3 class="text-primary border-bottom pb-2 mb-3">Expense Breakdown</h3>
                        <table class="table table-sm table-bordered">
                            <thead class="thead-light">
                                <tr>
                                    <th class="text-left">Description</th>
                                    <th class="text-center">Type</th>
                                    <th class="text-right">Unit Amount</th>
                                    <th class="text-center">Qty</th>
                                    <th class="text-right">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="doc.allowance_line_ids" t-as="line">
                                    <td class="text-left"><span t-field="line.name"/></td>
                                    <td class="text-center"><span t-field="line.allowance_type"/></td>
                                    <td class="text-right"><span t-field="doc.company_id.currency_id.symbol"/><span t-field="line.amount"/></td>
                                    <td class="text-center"><span t-field="line.quantity"/></td>
                                    <td class="text-right"><span t-field="doc.company_id.currency_id.symbol"/><span t-field="line.total_amount"/></td>
                                </tr>
                            </tbody>
                            <tfoot class="table-primary">
                                <tr>
                                    <td colspan="4" class="text-right"><strong>Total Mission Cost:</strong></td>
                                    <td class="text-right"><strong><span t-field="doc.company_id.currency_id.symbol"/><span t-field="doc.grand_total"/></strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                    <!-- Signatures -->
                    <div class="mt-4 pt-3 border-top">
                        <div class="row">
                            <div class="col-6 text-center">
                                <p class="mb-1 border-top pt-2">Employee Signature</p>
                            </div>
                            <div class="col-6 text-center">
                                <p class="mb-1 border-top pt-2">Manager Approval</p>
                            </div>
                        </div>
                    </div>

                    <!-- Footer -->
                    <div class="mt-3 pt-2 border-top text-center">
                        <small class="text-muted">HR Missions System - Generated on <span t-field="doc.create_date"/></small>
                    </div>

                </t>
            </div>
        </t>
    </t>
</template>
    </data>
</odoo>